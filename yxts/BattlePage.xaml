<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="yxts.BattlePage">
    <ContentPage.Content>
        <StackLayout Margin="30, 30, 30, 0">
            <StackLayout>
                <Button Text="Return To Home Page" Clicked="ReturnToHomePage"></Button>
                <Button Text="Pull" Clicked="ToPull"></Button>
            </StackLayout>
            <StackLayout x:Name="Pull1" Orientation="Horizontal">
                <StackLayout BackgroundColor="CornflowerBlue" WidthRequest="100" HeightRequest="100">
                    <Label x:Name="Card1Name" HorizontalTextAlignment="Center" FontSize="Large" Margin="0, 10, 0, 0" FontAttributes="Bold"></Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                        <Label x:Name="Card1Ele" HorizontalTextAlignment="Center"></Label>
                        <Label x:Name="Card1Price" HorizontalTextAlignment="Center"></Label>
                    </StackLayout>
                    <Button Text="购买" FontSize="Medium" Margin="0, -10, 0, 0" TextColor="WhiteSmoke" Clicked="BuyPos1"></Button>
                </StackLayout>
                <StackLayout BackgroundColor="CornflowerBlue" WidthRequest="100" HeightRequest="100">
                    <Label x:Name="Card2Name" HorizontalTextAlignment="Center" FontSize="Large" Margin="0, 10, 0, 0" FontAttributes="Bold"></Label>
