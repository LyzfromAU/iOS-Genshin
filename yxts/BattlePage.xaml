                    </StackLayout>
                    <Button Text="购买" FontSize="Medium" Margin="0, -10, 0, 0" TextColor="WhiteSmoke" Clicked="BuyPos2"></Button>
                </StackLayout>
                <StackLayout BackgroundColor="CornflowerBlue" WidthRequest="100" HeightRequest="100">
