                    </StackLayout>
                    <Button Text="购买" FontSize="Medium" Margin="0, -10, 0, 0" TextColor="WhiteSmoke" Clicked="BuyPos3"></Button>
                </StackLayout>
            </StackLayout>
            <StackLayout x:Name="Pull2" Orientation="Horizontal">
                <StackLayout BackgroundColor="CornflowerBlue" WidthRequest="100" HeightRequest="100">
                    <Label x:Name="Card4Name" HorizontalTextAlignment="Center" FontSize="Large" Margin="0, 10, 0, 0" FontAttributes="Bold"></Label>
