                    </StackLayout>
                    <Button Text="购买" FontSize="Medium" Margin="0, -10, 0, 0" TextColor="WhiteSmoke" Clicked="BuyPos5"></Button>
                </StackLayout>
                <StackLayout BackgroundColor="CornflowerBlue" WidthRequest="100" HeightRequest="100">
                    <Label x:Name="Card6Name" HorizontalTextAlignment="Center" FontSize="Large" Margin="0, 10, 0, 0" FontAttributes="Bold"></Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                        <Label x:Name="Card6Ele" HorizontalTextAlignment="Center"></Label>
